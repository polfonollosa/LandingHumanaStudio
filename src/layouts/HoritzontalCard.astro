---

// Definimos las propiedades (props) que recibir√° el componente
const { imageSrc, title, description } = Astro.props;
---

<div class="card flex-col space-y-1">
  <div class="h-3/4 overflow-hidden">
    <img src={imageSrc} draggable="false" alt="Card image" class="card-image " />
  </div>
  <div class="h-1/4 flex-col">
    <h2 class="card-title">{title}</h2>
    <p class="card-description">{description}</p>
  </div>
</div>

<style>
  .card {
    width: 450px;
    border-radius: 8px;
    overflow: hidden;;
  }

  .card-image {
    width: 100%;
    height: 470px;
    object-fit: cover;
  }


  .card-title {
    font-size: 1.0rem;
    margin: 0;
    color: black;
    font-weight: bold;
  }

  .card-description {
    font-size: 1rem;
    color: #666;
  }
</style>
